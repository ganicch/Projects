<html>
<head>
    <script src="https://kit.fontawesome.com/cd20a3b6e8.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/narudjbe.css' />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
<div class="nav-bar">
    <a href="/home"> <img src="/../images/logo.png" class="nav-logo" ></a>
    <ul>
        <a href="/home"><li>Home</li></a>
        <a href="/shop/sho"><li>Shop</li></a>
        <a href="/users/nalog"><li>My account</li></a>
        <a href="/myshop"><li>My Shop</li></a>
        <a href="/shop/dodajartikal"><li>Add Articles</li></a>
        <a href="/shop/obrisiartikal"><li>Remove Articles</li></a>
        <a href="/shop/narudjbe" class="active"><li>Orders</li></a>
    </ul>
    <a class="signout" href="/login/logout"><i class="fas fa-sign-out-alt"></i></a>

</div>
<div class="sve">
    <h3><%=naslov%></h3>
    <%for(let i=0;i<Artiklii.length;i++) {%>
    <div class="jedan">
        <div class="slika">
            <img src="/../uploads/<%=Artiklii[i].slika%>">
        </div>
        <div class="opis">
            <h4 style="margin-top: 10px"><%=Artiklii[i].ime%></h4>
            <div class="lala">
                <label>Kupac: </label>
                <p><%=Artiklii[i].im + " " + Artiklii[i].pr%></p>
            </div>
            <p><%=Artiklii[i].cijena%> KM</p>

        <div class="dugmici">
            <form method="post" action="/shop/odobri">
                <input name="da" value="<%=Artiklii[i].kid%>" style="display: none" >
                <input type="submit" value="Potvrdi prodaju" style="background-color: green;color: white">
            </form>
            <form method="post" action="/shop/odbij">
                <input name="ne" value="<%=Artiklii[i].kid%>" style="display: none">
                <input type="submit" value="Odbij prodaju">
            </form>
        </div>
        </div>

    </div>
    <%}%>
</div>
</body>
</html>
