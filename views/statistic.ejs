    <link rel='stylesheet' href='/stylesheets/statistic.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
</head>
<body>
<div class="nav-bar">
    <a class="back" href="/admin"><i class="fas fa-angle-double-left"></i></a>
    <img src="../images/logo.png" class="nav-logo" >
    <a class="signout" href="/login/logout"><i class="fas fa-sign-out-alt"></i></a>
</div>
    <div class="sve-gore">
        <div class="chart">
            <canvas id="myChart"></canvas>
        </div>
        <div class="chart">
            <canvas id="myChart2"></canvas>
        </div>
        <div class="chart">
            <canvas id="myChart3"></canvas>
        </div>
    </div>
<script>
    function stat(a,b,c,d,e) {
        let myChart = document.getElementById(a).getContext('2d')

        let massPopChart = new Chart(myChart, {
            type: b,
            data: {
                labels: d,
                datasets: [{
                    label: c,
                    data: e,
                    backgroundColor: ['green','red','blue']
                }]

            }
        })
    }
    var niz = ['Korisnici','Artikli','Kategorije']
    var niz2 = [<%=kor%>,<%=art%>,<%=kat%>]
    stat('myChart','bar','statistic',niz,niz2)
    niz = ['Trgovci','Kupci']
    niz2 = [<%=brTrg%>,<%=brKup%>]
    stat('myChart2','pie','statistic',niz,niz2)
    niz = ['Aktivni','Neaktivni','Blokirani']
    niz2 = [<%=ak%>,<%=nk%>,<%=bk%>]
    stat('myChart3','doughnut','statistic',niz,niz2)


</script>
</body>
