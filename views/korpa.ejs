</head>
<body>
<div class="nav-bar">
    <a href="/home"> <img src="/../images/logo.png" class="nav-logo" ></a>
    <ul>
        <a href="/home"><li>Home</li></a>
        <a href="/shop/sho"><li>Shop</li></a>
        <a href="/users/nalog"><li>My account</li></a>
    </ul>
    <a href="/users/korpa"><div class="korpa active">
            <i class="fas fa-shopping-cart" ></i>
        </div></a>
    <a class="signout" href="/login/logout"><i class="fas fa-sign-out-alt"></i></a>

</div>
    <div class="sve">
        <%for(let i=0;i<korpaArtikli.length;i++) {%>
            <div class="jedan">
                <div class="slika">
                    <img src="/../uploads/<%=korpaArtikli[i].slika%>">
                </div>
                <div class="opis">
                    <h4><%=korpaArtikli[i].ime%></h4>
                    <p><%=korpaArtikli[i].kat%></p>
                    <h5><%=korpaArtikli[i].cijena%> KM</h5>
                </div>
                <div>
                    <form method="post" action="/users/korpa/brisi">
                        <input type="text" value="<%=korpaArtikli[i].kid%>" style="display:none;" name="obrisi">
                        <input type="submit" value="X" class="x">
                    </form>
                </div>
                <form method="post" action="/shop/productt/post">
                    <input type="text" value="<%=korpaArtikli[i].ida%>" style="display:none;" name="id">
                    <input type="submit" value="POGLEDAJ" class="pogledaj">
                </form>
            </div>
        <%}%>
        <%if(korpaArtikli.length !== 0) {%>
        <div class="dugmad">
            <form method="post" action="/users/korpa/potvrdi" class="forma1">
                <input type="submit" class="potvrdi" value="potvrdi" >
            </form>
            <form method="post" action="/users/korpa/odbij">
                <input type="submit" class="odbij" value="Obrisi" >
            </form>
        </div>
        <%}else{%>
            <h3 style="background: rgba(125, 114, 118, 0.6);color: white;border-radius: 10px">--Nemate artikala u korpi--</h3>
        <%}%>
    </div>
</body>
</html>
